{
    "name": "sustainly-backend",
    "version": "1.0.0",
    "description": "Backend service for product sustainability tracking",
    "main": "dist/src/lambda/index.js",
    "scripts": {
        "clean": "rimraf dist",
        "build": "pnpm run clean && tsc",
        "start": "ts-node src/lambda/index.ts",
        "test": "jest",
        "lint": "biome lint .",
        "lint:fix": "biome lint . --apply",
        "format": "biome format .",
        "format:fix": "biome format . --write",
        "check": "biome check .",
        "check:fix": "biome check . --apply",
        "predeploy": "pnpm run clean && pnpm run bundle:lambda",
        "deploy": "cdk deploy",
        "full-deploy": "pnpm run predeploy && cdk deploy --all --require-approval never",
        "build:lambda": "esbuild src/lambda/index.ts --bundle --platform=node --target=node18 --outfile=dist/lambda/index.js",
        "bundle:lambda": "esbuild src/lambda/index.ts --bundle --minify --platform=node --target=node18 --outfile=dist/lambda/index.js"
    },
    "keywords": [
        "sustainability",
        "eco-friendly",
        "products"
    ],
    "author": "Sustainly Team",
    "license": "MIT",
    "dependencies": {
        "@aws-sdk/client-ssm": "^3.782.0",
        "@google/generative-ai": "^0.3.0",
        "@supabase/supabase-js": "^2.49.1",
        "aws-lambda": "^1.0.7",
        "aws-sdk": "^2.1692.0",
        "axios": "^1.6.7",
        "dotenv": "^16.4.7"
    },
    "devDependencies": {
        "@aws-sdk/client-api-gateway": "^3.782.0",
        "@biomejs/biome": "^1.9.4",
        "@types/aws-lambda": "^8.10.147",
        "@types/node": "^18.19.74",
        "aws-cdk-lib": "^2.177.0",
        "constructs": "^10.4.2",
        "esbuild": "^0.24.2",
        "esbuild-node-tsc": "^2.0.5",
        "eslint": "^8.57.1",
        "fs-extra": "^11.3.0",
        "jest": "^29.7.0",
        "rimraf": "^5.0.5",
        "ts-node": "^10.9.2",
        "typescript": "^4.9.5"
    }
}
